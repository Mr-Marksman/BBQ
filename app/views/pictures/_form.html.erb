<%= form_for [@event, picture], data: {turbo: false} do |form| %>
  <%= render "devise/shared/error_messages", resource: picture %>

  <% if user_signed_in? %>
    <div class="form-group">
      <%= form.label :photo, I18n.t("form.picture.photo") %>
      <%= form.file_field :photo, class: "form-control" %>
    </div>
  <% end %>

  <%= form.submit I18n.t("form.picture.submit"), class: "btn btn-warning mt-2 mb-3" %>
<% end %>
