<div class="col-sm-6 col-md-4 col-lg-3 mb-3">
  <div class="card shadow-sm">
    <a class="text-decoration-none text-dark" href=<%= event_path(event) %> >
    <%= image_tag main_photo(event), class: "card-img-top img-fluid mx-auto d-block" %>
    <div class="card-body">
      <h5 class="card-title text-center"><%= event.title %></h5>
      <h6 class="card-text"><small><%= l(event.datetime, format: :short) %></small></h6>
      <p class="card-text mb-2"><%= event.address %></p>
    </div>
    </a>
  </div>
</div>
