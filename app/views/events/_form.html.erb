<%= form_with model: event, html: { multipart: true }, data: {turbo: false} do |form| %>

  <div class="form-group mt-4">
    <%= form.label :title, "Введи название. Оно будет отображено на главной странице." %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mt-4">
    <%= form.label :address, "Где будет проходить мероприятие?" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group mt-4">
    <%= form.label :datetime, "Когда к тебе приходить?" %>
    <%= form.datetime_select :datetime, class: "form-control" %>
  </div>

  <div class="form-group mt-4">
    <%= form.label :description, "Напиши что-нибудь о мероприятии." %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  
  <div class="actions mt-4">
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
    <%= link_to "Вернуться", :back, class: "btn btn-warning ms-2" %>
  </div>
<% end %>