<h2>Редактирование пользователя</h2>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}, html: { method: :put }  do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mt-3 col-md-6">
    <%= f.label :name, "Имя*" %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="row col-md-6">Все еще ждем подтверждения email: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group mt-3 col-md-6">
    <%= f.label :password, "Новый пароль" %>
    <% if @minimum_password_length %>
      <br>
      <em>Минимум <%= @minimum_password_length %> символов</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group mt-3 col-md-6">
    <%= f.label :password_confirmation, "Повторите новый пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group mt-3 col-md-6">
    <%= f.label :current_password, "Текущий пароль*" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Подтвердить изменения", class: "btn btn-success mt-3" %>
  </div>
<% end %>

<p>
  <%= button_to "Удалить аккаунт", registration_path(resource_name), 
    form: { data: { turbo_confirm: I18n.t("actions.confirmation") }}, method: :delete, class:"btn btn-danger" %>
</p>

<%= link_to "Back", :back %>

